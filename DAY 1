#include <stdio.h>

int main() {
    int arr[10] = {1, 2, 3, 4, 5}; // array with 5 elements
    int n = 5; // current number of elements
    int element = 99; // element to insert
    int pos = 3; // position to insert (1-based index)

    // shift elements to the right
    for (int i = n; i >= pos; i--) {
        arr[i] = arr[i - 1];
    }

    // insert the element
    arr[pos - 1] = element;
    n++; // increase size

    // print the array
    printf("Array after insertion: ");
    for (int i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}

